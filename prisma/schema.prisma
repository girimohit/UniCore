
// PRISMA SETUP
datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

/* ---------------------------------- ENUMS --------------------------------- */
enum UserRole {
  ADMIN
  FACULTY
  STUDENT
}

enum AttendanceStatus {
  PRESENT
  ABSENT
}

/* --------------------------------- TENANT --------------------------------- */
model Tenant {
  id        String   @id @default(uuid())
  name      String
  code      String   @unique
  createdAt DateTime @default(now())

  users       User[]
  departments Department[]
  programs    Program[]
  subjects    Subject[]
  notices     Notice[]
}


/* ---------------------------------- USER ---------------------------------- */

model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique
  name      String
  email     String
  role      UserRole
  tenantId  String
  programId String?  // only for STUDENT
  createdAt DateTime @default(now())

  tenant      Tenant       @relation(fields: [tenantId], references: [id])
  program     Program?     @relation(fields: [programId], references: [id])
  enrollments Enrollment[]
  attendances Attendance[]

  @@index([tenantId])
}


/* ------------------------------- DEPARTMENT ------------------------------- */

model Department {
  id       String @id @default(uuid())
  name     String
  tenantId String

  tenant   Tenant    @relation(fields: [tenantId], references: [id])
  programs Program[]

  @@index([tenantId])
}


/* --------------------------------- PROGRAM -------------------------------- */

model Program {
  id           String @id @default(uuid())
  name         String
  departmentId String
  tenantId     String

  department Department @relation(fields: [departmentId], references: [id])
  tenant     Tenant     @relation(fields: [tenantId], references: [id])
  subjects   Subject[]
  students   User[]

  @@index([tenantId])
}


/* --------------------------------- SUBJECT -------------------------------- */

model Subject {
  id        String @id @default(uuid())
  name      String
  programId String
  tenantId  String

  program     Program      @relation(fields: [programId], references: [id])
  tenant      Tenant       @relation(fields: [tenantId], references: [id])
  enrollments Enrollment[]
  attendances Attendance[]

  @@index([tenantId])
}


/* ------------------------------- ENROLLMENT ------------------------------- */

model Enrollment {
  id         String   @id @default(uuid())
  studentId  String
  subjectId  String
  tenantId   String
  enrolledAt DateTime @default(now())

  student User    @relation(fields: [studentId], references: [id])
  subject Subject @relation(fields: [subjectId], references: [id])

  @@unique([studentId, subjectId])
  @@index([tenantId])
}


/* ------------------------------ //ATTENDANCE ------------------------------ */

model Attendance {
  id        String           @id @default(uuid())
  studentId String
  subjectId String
  date      DateTime
  status    AttendanceStatus
  markedBy  String  // faculty userId
  tenantId  String

  student User    @relation(fields: [studentId], references: [id])
  subject Subject @relation(fields: [subjectId], references: [id])

  @@unique([studentId, subjectId, date])
  @@index([tenantId])
}


/* ------------------------------ NOTICE BOARD ------------------------------ */

model Notice {
  id        String   @id @default(uuid())
  title     String
  content   String
  tenantId  String
  createdAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@index([tenantId])
}

